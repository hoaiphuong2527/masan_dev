                        +newsItemSlide(imgDataPath + 'news/img9.jpg',url + 'media-center-news-detail.html')
                    .col-md-4.col-6.break360
                        +newsItemSlide(imgDataPath + 'news/img10.jpg',url + 'media-center-news-detail.html')
                    .col-md-4.col-6.break360
                        +newsItemSlide(imgDataPath + 'news/img11.jpg',url + 'media-center-news-detail.html')
                    .col-md-4.col-6.break360
                        +newsItemSlide(imgDataPath + 'news/img12.jpg',url + 'media-center-news-detail.html')
                    .col-md-4.col-6.break360
                        +newsItemSlide(imgDataPath + 'news/img13.jpg',url + 'media-center-news-detail.html')
                    .col-md-4.col-6.break360
                        +newsItemSlide(imgDataPath + 'news/img14.jpg',url + 'media-center-news-detail.html')
                    .col-md-4.col-6.break360
                        +newsItemSlide(imgDataPath + 'news/img15.jpg',url + 'media-center-news-detail.html')
