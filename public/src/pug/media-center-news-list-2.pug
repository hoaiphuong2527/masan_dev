extends layouts/_layout_default

block title 
    title BW Industrial Development JSC
    - var mainActive = 'News-2';
block content
    +bgImg(imgDataPath + 'news/media-center-news.jpg','bgBanner')
    section.mainBeardcrumb(data-waypoint="100%")
        .container
            .row.align-items-center
                .col-12.align-self-center
                    ol.breadcrumb
                        li.breadcrumb-item
                            i.ic_home
                            a(href='/') Home
                        li.breadcrumb-item
                            a(href='#') Media Center 
                        li.breadcrumb-item
                            a(href='#') News  
                        li.breadcrumb-item
                            a(href='#') News for Investor
                        li.breadcrumb-item.active(aria-current='page') Activities of BW Industrial
    section.ourNewsList#investorNews
        .container
            h1.titleHeading(data-waypoint="100%") News for Investor
            .gridNews--2
                ul.navLink#navTop.mediaEffect(data-waypoint="100%")
                    li: a(href=url +"media-center-news-list.html#industrialNews") Activities of BW Industrial
                    li.active: a(href=url +"media-center-news-list-2.html#investorNews") Activities of Investors
                .row.mediaEffect-2(data-waypoint="100%")
                    .col-md-4.col-6.break360
                        +newsItemSlide(imgDataPath + 'news/img8.jpg',url + 'media-center-news-detail.html')
