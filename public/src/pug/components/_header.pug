                            a.dropdown-item(href='#'): img(src=imgDataPath + "flags/china.png" alt="") 
                .searchBox
                    button.btn-search.navbar-search-btn
                        i.fa.fa-search
                form(action=url + "/search.html")
                    .innerSearch.navbar-search
                        input(type="text" placeholder="Find what you are looking for?").form-control
                        button.btn-search-close
                            i.fa.fa-search
