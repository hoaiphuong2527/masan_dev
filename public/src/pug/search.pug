extends layouts/_layout_default

block title 
    title BW Industrial Development JSC

block content
    section.searchHeading(data-waypoint="100%")
        .container
            .row
                .col-md-10.offset-md-1.col-12
                    form.searchHeading__form
                        p.searchHeading__form__text Search for
                        .form-group
                            i.ic_search
                            input(type="text" class="form-control" value="warehouse")
                            button.btnRemove(type="button")
                                i.ic_close
